html
  background: $colorSnow
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

html,
body,
#main
  height: 100%

input[type='radio'],
input[type='checkbox']
  blockInvisible()

input[type='password']::-webkit-auto-fill-button
  margin-right: 5px
  background: $colorDark70

input,
select,
textarea,
button
  pointer-events: auto

// hack for FT Labs fastclick to work on <label> tag: https://github.com/ftlabs/fastclick/issues/275
label > *
  pointer-events: none

#noscript
  width: 100%
  padding: 15px

  position: fixed
  top: 0
  left: 0
  z-index: 100

  background: $colorSignal
  color: $colorSnow00
  text-align: center

  font-size: 18px
  line-height: 24px
