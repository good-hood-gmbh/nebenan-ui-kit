// Headline
h1, .ui-h1,
h2, .ui-h2,
h3, .ui-h3,
h4, .ui-h4
  word-wrap: break-word

h1,
.ui-h1
  display: block
  font-size: 25px
  line-height: 32px
  font-weight: $fontWeightM
  color: $colorDark
  text-transform: none

h2,
.ui-h2
  display: block
  font-size: 20px
  line-height: 26px
  font-weight: $fontWeightM
  color: $colorDark
  text-transform: none

h3,
.ui-h3
  font-size: 17px
  line-height: 24px
  font-weight: $fontWeightL
  color: $colorDark
  text-transform: none

h4,
.ui-h4
  display: block
  font-size: $fontSizeM
  line-height: 18px
  font-weight: $fontWeightL
  color: $colorDark
  text-transform: uppercase

// Copy
body,
select,
input,
button,
textarea
  font: normal $fontSizeM/$lineHeightM $fontFamily
  color: $colorDark70

small,
.ui-small
  font-size: $fontSizeS

strong,
.ui-strong
  font-weight: $fontWeightL

// Link
a,
.ui-link
  color: $colorBase
  text-decoration: none
  cursor: pointer
  pointer-events: auto

  &:visited
    color: $colorBase

  &:active,
  &:hover
    color: $colorDark85

  &.is-disabled
    color: $colorDark20
    cursor: auto

// Label
.ui-label
  color: $colorDark
  font-size: 12px
  line-height: 15px
  font-style: normal
  font-weight: $fontWeightL
  user-select: none

.ui-label-primary
  color: $colorDark70
  font-size: $fontSizeM
  line-height: $lineHeightM

// Error
.ui-error
  display: block
  color: $colorSignal
  font-size: $fontSizeM
  line-height: $lineHeightM
  font-style: normal
  font-weight: $fontWeightL

// Success message
.ui-success
  display: block
  color: $colorAction
  font-size: $fontSizeM
  line-height: $lineHeightM
  font-style: normal
  font-weight: $fontWeightL
